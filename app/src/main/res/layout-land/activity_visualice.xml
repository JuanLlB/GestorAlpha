        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <Spinner
        android:id="@+id/opcionesMes2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/opcionesDia"
        app:layout_constraintEnd_toStartOf="@+id/listaGastos"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/opcionesDia"
        app:layout_constraintTop_toTopOf="@+id/opcionesDia"
        app:layout_constraintVertical_bias="0.0"
